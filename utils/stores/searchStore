import { create } from 'zustand'


interface SearchState {
  search: string[] | null,
  setSearch: (newSearch: string[] | null) => void,
  resetSearch: () => void,
}

export const searchStore = create<SearchState>()((set) => ({
  search: null,
  setSearch: (newSearch: string[] | null) => set({search: newSearch}),
  resetSearch: () => set({search: null}),
}))
